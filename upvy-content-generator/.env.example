# =============================================================================
# Upvy AI Content Generator - 환경 변수 설정
# =============================================================================
# 이 파일을 .env로 복사한 후 값을 채워주세요.
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# n8n 설정
# -----------------------------------------------------------------------------
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678

# n8n 인증 (필수)
N8N_USER=admin
N8N_PASSWORD=your-secure-password-here

# n8n Owner 계정 (첫 실행시 자동 생성)
N8N_OWNER_EMAIL=admin@upvy.io
N8N_OWNER_FIRSTNAME=Upvy
N8N_OWNER_LASTNAME=Admin

# 로깅 레벨 (debug, info, warn, error)
N8N_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# GCP 설정 (Vertex AI, TTS용)
# -----------------------------------------------------------------------------
# GCP 프로젝트 ID
GCP_PROJECT_ID=your-gcp-project-id

# Vertex AI 리전
VERTEX_AI_LOCATION=asia-northeast3

# -----------------------------------------------------------------------------
# AWS S3 설정 (최종 콘텐츠 저장용)
# -----------------------------------------------------------------------------
S3_BUCKET=upvy-ai-content
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# -----------------------------------------------------------------------------
# Compose Service 설정
# -----------------------------------------------------------------------------
SPRING_PROFILES_ACTIVE=local
COMPOSE_LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# SNS API 설정
# -----------------------------------------------------------------------------
# YouTube Data API
YOUTUBE_API_KEY=
YOUTUBE_REFRESH_TOKEN=
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# Instagram Graph API
INSTAGRAM_USER_ID=
INSTAGRAM_ACCESS_TOKEN=

# TikTok API
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_ACCESS_TOKEN=

# -----------------------------------------------------------------------------
# Upvy Backend API 설정
# -----------------------------------------------------------------------------
UPVY_API_URL=https://api.upvy.io
UPVY_AI_CREATOR_TOKEN=

# -----------------------------------------------------------------------------
# Telegram 알림 설정
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

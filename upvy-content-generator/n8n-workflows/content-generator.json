    {
      "parameters": {
        "jsCode": "const prevData = $input.first().json;\nconst visualResponse = $('4a. Visual Gen (Imagen 3)').first().json;\nconst imageBase64 = visualResponse.predictions?.[0]?.bytesBase64Encoded;\n\nif (!imageBase64) throw new Error('이미지 생성 실패: base64 데이터 없음');\n\nreturn {\n  json: { ...prevData },\n  binary: {\n    image: {\n      data: imageBase64,\n      mimeType: 'image/png',\n      fileName: 'visual.png'\n    }\n  }\n};"
      },
      "id": "convert-visual",
      "name": "Convert Visual to Binary",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1980, 100]
    },
